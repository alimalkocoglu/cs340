<h1>EVERETT AUTO REPAIR STORES</h1>
<p> Everett Auto Repairs Database Management System</p>


{{!-- Create a table --}}
<table id="customers-vehicle-table" class="table-info">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the paddrstate renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
            <th>update</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, address1 and addrstate, in order --}}
        {{#each data}}
        <tr data-value={{this.customer_id}}>
            <td>{{this.customer_id}}</td>
            <td>{{this.vehicle_id}}</td>
            <td>{{this.vin_number}}</td>
            <td>{{this.make}}</td>
            <td>{{this.model}}</td>
            <td>{{this.year}}</td>
            <td>{{this.mileage}}</td>
            <td>{{this.trim}}</td>
            <td>{{this.engine_type}}</td>
            <td>{{this.license_plate}}</td>
            <td><button onclick="deleteCustomerVehicle({{this.vehicle_id}})">Delete</button></td>
            <td><button onclick="updateCustomerVehicle('{{this.vehicle_id}}','{{this.customer_id}}','{{this.vin_number}}','{{this.make}}','{{this.model}}','{{this.year}}','{{this.mileage}}','{{this.trim}}','{{this.engine_type}}','{{this.license_plate}}')">update</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>



<div id='update_customer_vehicle_form' class='hidden'>
