<h1>EVERETT AUTO REPAIR STORES</h1>

{{!-- Create a table --}}
<<table id="customers-table">>

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the paddrstate renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, address1 and addrstate, in order --}}
        {{#each data}}
        <tr data-value={{this.customer_id}}>
            <td>{{this.customer_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.middle_name}}</td>
            <td>{{this.address1}}</td>
            <td>{{this.address2}}</td>
            <td>{{this.address_city}}</td>
            <td>{{this.address_state}}</td>
            <td>{{this.address_zip}}</td>
            <td>{{this.phone_number}}</td>
            <td><button onclick="deleteCustomer({{this.customer_id}})">Delete</button></td>
            <td><button onclick="updateCustomer({{this.customer_id}},'{{this.first_name}}','{{this.last_name}}','{{this.middle_name}}','{{this.address1}}','{{this.address2}}','{{this.address_city}}','{{this.address_state}}','{{this.address_zip}}',{{this.phone_number}})">update</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>



